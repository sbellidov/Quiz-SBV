<h1>Preguntas</h1>

<table>
   <% var i; for (i=0; i < quizes.length; i++) { %>
      <tr>
         <td>
            <a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
         </td>
         <% if (session.user) { %>
         <td>
            <a href="quizes/<%= quizes[i].id %>/edit">
               <button class="form_button">Editar</button>
            </a>
         </td>
         <td>
            <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
               <button class="form_button" type="submit" onclick="return confirm('Borrar:<%= quizes[i].pregunta %>');">
                  Borrar
               </button>
            </form>
         </td>
         <% } %>
      </tr>
   <% } %>
</table>
<% if (session.user) { %>
   <a href="/quizes/new"><button type="button" class="form_button">Crear Pregunta</button></a>
<% } %>